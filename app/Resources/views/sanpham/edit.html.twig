{% extends 'admin/admin.html.twig' %}
{% block menu %}
  {% include 'admin/menu.html.twig' %}
{% endblock %}
{% block body %}
<div class="col-md-12">
  <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Product</h3>
            </div>
            <div class ="content">
              <form action="{{ path('product_edit') }}" method="POST" enctype="multipart/form-data">
                {% include 'sanpham/errors.html.twig' %}
                <div class="form-group">
                  <select class="form-control" id="_loaisp" name="_loaisp">
                    {% for item in _select %}
                         <option {% if item.id == sanpham.loaisp.id %}selected="selected"{% endif %} value="{{item.id}}">{{item.tenloai}}</option>
                    {% endfor %}                     
                  </select>
                </div>
                 <div class="form-group">
                  <label>Tên sản phẩm:</label>
                  <input type="text" class="form-control" id="_tensp" name="_tensp" placeholder="Enter name product" value="{{sanpham.tensp}}">
                </div>
                <div class="form-group">
                  <label >Giá Sản Phẩm:</label>
                  <input type="number" min="0" class="form-control" id="_gia" name="_gia" placeholder="Enter price product" value="{{sanpham.gia}}">
                </div>
                <div class="form-group">
                  <label>Image</label>
                  <input type="file" id="_file" name="_upload[]" multiple="multiple"  accept="image/*" >
                </div>
                <div class="form-group">
                  <label >Mô tả:</label>
                  <textarea id="_mota" name="_mota" class="form-control"> {{sanpham.mota}} 
                  </textarea>
                </div>           
            </div>
              <div class="box-footer">
                  <input class="btn btn-success" type="submit" value="Create" />
                  <a class="btn btn-primary" href="{{path('product_index')}}">Back to the list</a>
              </div>
           </form>
           
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js' )}}"></script>
    <script>
    $(function () {
    // Replace the <textarea id="editor1"> with a CKEditor
    // instance, using default configuration.
   CKEDITOR.replace('_mota')
    //bootstrap WYSIHTML5 - text editor
   // $('.textarea').wysihtml5()
    })
</script>
{% endblock %}
