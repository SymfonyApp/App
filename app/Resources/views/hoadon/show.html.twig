{% extends 'admin/admin.html.twig' %}
{% block menu %}
    {% include 'admin/menu.html.twig' %}
{% endblock %}

{% block body %}
    <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h1 class="box-title">Hóa đơn</h1>
            </div>
            <!-- /.box-header -->
                <div class="box-body table-responsive" id="table_id" >
                    <label>Mã Hóa Đơn: {{hoadon.id}}</label> <br>
                    <label>Tên KH: {% if hoadon.khachhang %}{{ hoadon.khachhang.tenkh }}{% endif %}</label>
                    <br>
                    <label>Ngày đặt: {% if hoadon.ngaydat %}{{ hoadon.ngaydat|date('Y-m-d H:i:s') }}{% endif %}</label>
                    <br>
                    <label>Ngày đặt: {% if hoadon.ngaygiao %}{{ hoadon.ngaygiao|date('Y-m-d H:i:s') }}{% endif %}</label>
                    <br>
                    <label>Trạng thái: {{hoadon.trangthai}}</label>
                    <br>
                    <label>Danh sách sản phẩm</label>
                    <br>
                    <table border="1">
                        <thead>
                            <th align="center">Mã SP</th>
                            <th>Tên SP</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>    
                        </thead>
                        {% for cthd in hoadon.cthds %}
                        <tbody>
                            
                                <td align="center">
                                    {% if cthd.sanpham %}
                                        {{cthd.sanpham.id}}
                                    {% endif %}
                                </td>
                                <td>{{cthd.tensp}}</td>
                                <td align="center">{{cthd.sl}}</td>
                                <td align="right">{{cthd.dongia}}</td>
                                <td align="right">{{cthd.thanhtien}}</td>              
                        </tbody>
                    {% endfor %}
                    </table>
                    <label>Tổng tiền: {{hoadon.tongtien}}</label>

                
            </div>

            </div>

        </div>
            <ul>
                <a href="{{ path('bill_index') }}" class="btn btn-primary" >Back to the list</a>
                <a href="#" class="btn btn-warning">Edit</a>
                <a class="deleteCustomer btn btn-danger" href="{{ path('bill_delete', { 'id': hoadon.id }) }}" >Delete</a>
                <a class="btn btn-primary" target="_blank" href="{{ path('bill_print', { 'id': hoadon.id }) }}">Print</a>
             </ul>
    </div>
</div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
