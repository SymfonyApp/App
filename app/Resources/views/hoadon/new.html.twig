{% extends 'admin/admin.html.twig' %}
{% block menu %}
  {% include 'admin/menu.html.twig' %}
{% endblock %}
{% block body %}
<div class="col-md-12">
  <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Create Bill</h3>
            </div>
            <div class ="content">
              <div class="row">
                <div class="col-md-4">
                {% form_theme form 'bootstrap_3_layout.html.twig'  %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="box-footer">
                  <input class="btn btn-success" type="submit" value="Create" />
                  <a class="btn btn-primary" href="{{path('product_index')}}">Back to the list</a>
              </div>
            {{ form_end(form) }}
                </div>
                <div class="col-md-8">
                  <div class="form-group">
                    <label>Sản phẩm:</label>
                    <select class="form-control" id="_sanpham" name="_sanpham">
                      {% for item in sanphams %}
                           <option value="{{item.id}}">{{item.tensp}}</option>
                      {% endfor %}                     
                    </select> 
                    </div>
                    <div class="form-group">
                      <label>Số lượng:</label>
                      <input type="number" class="form-control" id="_sl" name="_sl" min="1" value="1">
                    </div>
                    <button type="submit" id="btn_add_product" class="btn btn-default " >Add product to bill</button>
                    <div class="form-group" id="table_cthd">
                      
                    </div>
                </div>
              </div>           
            </div>
              
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/addproducttobill.js' )}}"></script>
{% endblock %}
